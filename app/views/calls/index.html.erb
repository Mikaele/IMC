<h1>Lista de chamados</h1>
<hr>
<table class="table">
  <thead>
  <tr>
    <th>Descrição</th>
    <th>Colaborador</th>
    <th>Estado</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @calls.each do |call| %>
      <tr>
        <td><%= call.description %></td>
        <td><%= link_to call.colaborador.id,call.colaborador %></td>
        <td><%= call.estado %></td>
        <%if can? :show , Call%>
            <td><%= link_to 'Show', call ,:class=>'btn btn-info'%></td>
        <%end%>
        <%if can? :update, Call %>
            <td><%= link_to 'Edit', edit_call_path(call) ,:class=>'btn btn-primary'%></td>
        <% end%>
        <%if can? :delete, Call%>
            <td><%= link_to 'Destroy', call, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>'btn btn-danger'%></td>
        <% end%>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<%if can? :create, Call%>

    <%= link_to 'Novo Chamado', new_call_path %>
<% end %>

