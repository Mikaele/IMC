<h1>Listando Itens de Configuração</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Numero</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ics.each do |ic| %>
      <tr>
        <td><%= ic.name %></td>
        <td><%= ic.number %></td>
        <td><%= ic.description %></td>
        <td><%= link_to 'Show', ic,:class=>'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_ic_path(ic) ,:class=>'btn btn-primary'%></td>
        <td><%= link_to 'Destroy', ic, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

