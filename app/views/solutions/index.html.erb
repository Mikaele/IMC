<h1>Listando soluções</h1>
<hr>
<table class="table">
  <thead>
    <tr>
      <th>Call</th>
      <th>Comentario</th>
      <th>Colaborador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.call %></td>
        <td><%= solution.comentario %></td>
        <td><%= solution.colaborador.user.nome %></td>
        <td><%= link_to 'Show', solution,:class=>'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_solution_path(solution),:class=>'btn btn-primary' %>,</td>
        <td><%= link_to 'Destroy', solution, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>'btn btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%if can? :create, Solution%>
<%= link_to 'Nova Solução', new_solution_path %>
<%end%>
