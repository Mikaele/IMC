<h1>Listando soluções</h1>

<table>
  <thead>
    <tr>
      <th>Call</th>
      <th>Comentario</th>
      <th>Anexo</th>
      <th>Colaborador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.call %></td>
        <td><%= solution.comentario %></td>
        <td><%= solution.anexo %></td>
        <td><%= solution.colaborador %></td>
        <td><%= link_to 'Show', solution %></td>
        <td><%= link_to 'Edit', edit_solution_path(solution) %></td>
        <td><%= link_to 'Destroy', solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Solution', new_solution_path %>
